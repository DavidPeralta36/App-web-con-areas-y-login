@model DbConection.Preguntas


<h1 class="">¿Eliminar pregunta?</h1>


<h3 class="">¿Esta seguro de querer eliminar la pregunta?</h3>

<dl class="mt-3">
    <dd>
        <h2 class="text-dark">
            Id de la pregunta
        </h2>
    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.IdPregunta)
        </h5>

    </dd>
    <dd>
        <h2 class="text-dark">
            Respuesta Correcta
        </h2>

    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.RespuestaCorrecta)
        </h5>

    </dd>
</dl>

<form asp-action="EliminarPreguntaa">
    <input type="hidden" asp-for="IdPregunta" />
    <input type="submit" value="Eliminar pregunta" class="btn btn-danger" />
    <div>
        <a class="btn btn-warning text-dark" href="@Url.Action("Cuestionario", "Ingles", new { idCuestionario = Convert.ToInt32(@ViewData["IdCuestionario"]) })">Volver a la página principal</a>
    </div>
</form>
@if (ViewBag.AlertMessage != null)
{
    <script>swal("Cuidado!", "@ViewBag.AlertMessage", "warning");</script>
}